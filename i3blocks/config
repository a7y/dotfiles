command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
label=🔊
instance=Master
interval=once
signal=10

[iface]
label=🌐
color=#00FF00
interval=10
separator=false

[wifi]
label=⬍
